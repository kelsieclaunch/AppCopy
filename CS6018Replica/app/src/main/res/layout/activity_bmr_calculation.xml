<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hikingbackgroundblur">

    <TextView
        android:id="@+id/bmrPromptText"
        android:layout_width="259dp"
        android:layout_height="123dp"
        android:layout_marginTop="88dp"
        android:text="Your Daily Caloric Needs based on Your Basal Matabolic Rate (BMR) are:"
        android:textSize="24sp"
        android:textAlignment="center"
        android:background="@color/lightwhite"
        android:textColor="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bmrBack"
        android:layout_width="111dp"
        android:layout_height="64dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="290dp"
        android:layout_marginBottom="64dp"
        android:onClick="onBackButton"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/calorieOutputText"
        android:layout_width="161dp"
        android:layout_height="76dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="30dp"
        android:textSize="30dp"
        android:textColor="@color/brown"
        android:background="@color/lightwhite"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmrPromptText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="91dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="80dp"
        android:text="kcal/day"
        android:textColor="@color/brown"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calorieOutputText"
        app:layout_constraintTop_toBottomOf="@+id/bmrPromptText" />
</androidx.constraintlayout.widget.ConstraintLayout>