<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hikingbackgroundblur"
    tools:context=".Weight">

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="355dp"
        android:background="@color/lightwhite"
        android:entries="@array/weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weightLevelPrompt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="470dp"
        android:background="@color/lightwhite"
        android:text="What is your weight, in lbs?"
        android:textAlignment="center"
        android:textColor="@color/brown"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weightNextButton"
        android:layout_width="113dp"
        android:layout_height="56dp"
        android:layout_marginTop="487dp"
        android:layout_marginBottom="188dp"
        android:onClick="weightNextButton"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>